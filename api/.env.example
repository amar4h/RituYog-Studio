# Yoga Studio Management - API Environment Configuration
# Copy this file to .env and update values for your environment

# Database Configuration (get these from Hostinger hPanel)
DB_HOST=localhost
DB_PORT=3306
DB_NAME=your_database_name
DB_USER=your_database_user
DB_PASSWORD=your_database_password

# API Configuration
# IMPORTANT: Generate a strong random API key for production
API_KEY=yoga_studio_api_key_change_me_in_production

# CORS Origin (your frontend URL)
# For development: http://localhost:5173
# For production: https://your-domain.com
CORS_ORIGIN=*

# Debug Mode (set to false in production)
DEBUG_MODE=false
